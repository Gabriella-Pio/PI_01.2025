<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1"
      alignment="TOP_CENTER" spacing="20"
      stylesheets="@style.css"
      styleClass="background-main"
      fx:controller="br.teatroabc.controllers.Controller">

    <!-- Navbar -->
    <VBox styleClass="padding-large">
        <fx:include source="NavBar.fxml" />
    </VBox>

    <!-- Título Principal -->
    <Label text="Peças Disponíveis" styleClass="title-primary" />

    <!-- Destaques -->
    <HBox alignment="CENTER" spacing="20" maxWidth="1200" styleClass="highlight-section">
        <!-- Card 1 -->
        <VBox fx:id="destaquePeca1" alignment="CENTER" spacing="10" styleClass="highlight-card" onMouseClicked="#switchToDetalhes">
            <ImageView fx:id="imageView" fitWidth="400" fitHeight="400" preserveRatio="true">
                <image>
                    <Image url="@Img/peca1.png" />
                </image>
            </ImageView>
            <Label fx:id="tituloLabel" text="Peça 1" styleClass="highlight-text" />
        </VBox>

        <!-- Card 2 -->
        <VBox alignment="CENTER" fx:id="destaquePeca2" spacing="10" styleClass="highlight-card" onMouseClicked="#switchToDetalhes">
            <ImageView fitWidth="400" fitHeight="400" preserveRatio="true">
                <image>
                    <Image url="@Img/peca2.png" />
                </image>
            </ImageView>
            <Label text="Peça 2 - Nome" styleClass="highlight-text" />
        </VBox>

        <!-- Card 3 -->
        <VBox alignment="CENTER" fx:id="destaquePeca3" spacing="10" styleClass="highlight-card" onMouseClicked="#switchToDetalhes">
            <ImageView fitWidth="400" fitHeight="400" preserveRatio="true">
                <image>
                    <Image url="@Img/peca3.png" />
                </image>
            </ImageView>
            <Label text="Peça 3 - Nome" styleClass="highlight-text" />
        </VBox>
    </HBox>
</VBox>