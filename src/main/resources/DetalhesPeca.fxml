<!--                    <Button text="A2" styleClass="button-primary" />-->
<!--                    <Button text="B1" styleClass="button-primary" />-->
<!--                    <Button text="B2" styleClass="button-primary" />-->
<!--                </GridPane>-->
<!--            </VBox>-->

            <!-- Botões de Ação -->
            <HBox alignment="CENTER" spacing="20">
                <Button fx:id="btnSelecionarPoltrona" text="Escolher Poltronas" onAction="#switchToEscolherPoltrona" styleClass="button-primary" />
            </HBox>
        </VBox>
    </ScrollPane>

</VBox>
